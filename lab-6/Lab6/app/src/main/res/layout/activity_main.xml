<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/perform_button"
      android:layout_width="338dp"
      android:layout_height="58dp"
      android:text="Виконати"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintVertical_bias="0.64" />

  <EditText
      android:id="@+id/xMin_text"
      android:layout_width="338dp"
      android:layout_height="58dp"
      android:layout_marginTop="104dp"
      android:hint="Мінімум"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/number_text"
      android:layout_width="338dp"
      android:layout_height="58dp"
      android:layout_marginTop="16dp"
      android:hint="n"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/xMin_text" />

  <EditText
      android:id="@+id/xMax_text"
      android:layout_width="338dp"
      android:layout_height="58dp"
      android:layout_marginTop="16dp"
      android:hint="Максимум"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/number_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
